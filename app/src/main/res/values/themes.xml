<resources>
    <!-- Base application theme. -->
    <style name="Theme.Glider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Theme for the no-action-bar screen -->
    <style name="Theme.Glider.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for required text-input-layout -->
    <style name="RequiredTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mandatory_text_layout</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">@color/primary</item>
        <item name="startIconDrawable">@drawable/ic_baseline_info_24</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/primary</item>
        <item name="helperText">@string/required</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_error_24</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <!-- Theme for non required text-input-layout -->
    <style name="TextLayout" parent="RequiredTextLayout">
        <item name="boxStrokeColor">@color/text_layout</item>
        <item name="helperText">""</item>
    </style>

    <!-- Theme for password text-input-layout -->
    <style name="PasswordTextLayout" parent="RequiredTextLayout">
        <item name="android:hint">@string/password</item>
        <item name="endIconMode">password_toggle</item>
        <item name="counterMaxLength">32</item>
    </style>

    <!-- Theme for the material-components button -->
    <style name="ButtonLayout" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <!-- Theme for the material-components reverse color button -->
    <style name="ReverseButtonLayout" parent="ButtonLayout">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Theme for the material-components auto complete textView -->
    <style name="PasswordItem" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:inputType">none</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Theme for the material-components card view -->
    <style name="GliderCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundCardView</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>