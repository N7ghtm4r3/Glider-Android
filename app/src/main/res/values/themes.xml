<resources>
    <!-- Base application theme. -->
    <style name="Theme.Glider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Theme for the no-action-bar screen -->
    <style name="Theme.Glider.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for required text-input-layout -->
    <style name="RequiredTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mandatory_text_layout</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">@color/primary</item>
        <item name="startIconDrawable">@drawable/ic_baseline_info_24</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/primary</item>
        <item name="helperText">@string/required</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_error_24</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <!-- Theme for non required text-input-layout -->
    <style name="TextLayout" parent="RequiredTextLayout">
        <item name="boxStrokeColor">@color/text_layout</item>
        <item name="helperText">""</item>
    </style>

    <!-- Theme for password text-input-layout -->
    <style name="PasswordTextLayout" parent="RequiredTextLayout">
        <item name="android:hint">@string/password</item>
        <item name="endIconMode">password_toggle</item>
        <item name="counterMaxLength">32</item>
    </style>

    <!-- Theme for the material-components button -->
    <style name="ButtonLayout" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

</resources>